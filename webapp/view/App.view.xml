<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="sap.ui.bootcampwebapp.controller.App">
	<VBox>
		<Text text="Username"/>
		<Input value="{/field/username}" description="Hello {/field/username}!" width="40%" valueLiveUpdate="true" type="Text" placeholder="Input Username" maxLength="8" id="username"/>
		<Text text="Password"/>
		<Input type="Password" placeholder="Enter your Password" maxLength="10" width="20%" id="password"/>
		<Button  text="{i18n>loginButtonText}" press="onLoginPress"/>
	</VBox>
</mvc:View>
 
